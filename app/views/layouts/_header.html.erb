<header class="custom-color d-flex justify-content-between align-items-center border-bottom px-4 py-2" style="border-color:black !important;">
  <div>
    <%= link_to root_path do %>
      <%= image_tag "aboutpet.jpg", style: "width: 10%;" %>
    <% end %>
    <% unless controller_path.start_with?('admin/') %>
      <span class="ml-2">
        ようこそ、<%= user_signed_in? ? current_user.name : "ゲスト" %>さん!
      </span>
    <% end %>
  </div>

  <nav class="d-flex">
    <% if admin_signed_in? %>
      <%= link_to "ユーザー一覧", admin_path, class: "btn btn-white mx-1" %>
      <%= link_to "投稿一覧", posts_path, class: "btn btn-white mx-1" %>
      <%= link_to "グループ一覧", admin_path, class: "btn btn-white mx-1" %>
      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-white mx-1" %>

    <% elsif user_signed_in? %>
      <%= link_to "マイページ", mypage_user_path(current_user), class: "btn btn-white mx-1" %>
      <%= link_to "投稿一覧", posts_path, class: "btn btn-white mx-1" %>
      <%= link_to "グループ一覧", root_path, class: "btn btn-white mx-1" %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-white mx-1" %>

    <% else %>
      <%= link_to "About", about_path, class: "btn btn-white mx-1" %>
      <%= link_to "投稿一覧", posts_path, class: "btn btn-white mx-1" %>
      <%= link_to "新規登録", new_user_registration_path, class: "btn btn-white mx-1" %>
      <%= link_to "ログイン", new_user_session_path, class: "btn btn-white mx-1" %>
    <% end %>
  </nav>
</header>
