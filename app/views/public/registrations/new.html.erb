<div class="container my-5">
  <div class="text-center mb-4">
    <h1 class="fw-bold custom-orange">🐾 新規会員登録 🐾</h1>
    <h6 class="text-muted">動物好きの仲間とつながろう！</h6>
  </div>

  <div class="card shadow-sm p-4 custom-card mx-auto" style="max-width: 750px;">
    <%= render "public/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
      <div class="mb-3">
        <%= f.label :name, "名前", class: "form-label fw-bold custom-orange" %>
        <%= f.text_field :name, autofocus: true, class: "form-control comment-textarea", placeholder: "犬田　猫郎" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label fw-bold custom-orange" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control comment-textarea", placeholder: "sample@example.com" %>
      </div>

      <div class="mb-3">
        <%= f.label :profile_image, "プロフィール画像（必須）", class: "form-label fw-bold custom-orange" %>
        <%= f.file_field :profile_image, class: "form-control comment-textarea" %>
      </div>

      <div class="mb-3">
        <%= f.label :pet_type, "ペットの種類／好きな動物", class: "form-label fw-bold custom-orange" %>
        <%= f.text_field :pet_type, class: "form-control comment-textarea", placeholder: "イヌ、ネコ、うさぎ" %>
      </div>

      <div class="mb-3">
        <%= f.label :pet_name, "ペットの名前", class: "form-label fw-bold custom-orange" %>
        <%= f.text_field :pet_name, class: "form-control comment-textarea", placeholder: "ポチ（飼っていない場合は「無」）" %>
      </div>

      <div class="mb-3">
        <%= f.label :bio, "自己紹介文", class: "form-label fw-bold custom-orange" %>
        <%= f.text_area :bio, class: "form-control comment-textarea", rows: 3, placeholder: "昔から動物が好きで、最近念願の犬を飼い始めました！" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード（6文字以上）", class: "form-label fw-bold custom-orange" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control comment-textarea" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label fw-bold custom-orange" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control comment-textarea" %>
      </div>

      <div class="text-center">
        <%= f.submit "新規登録", class: "btn btn-lg bg-soft-orange fw-bold px-5" %>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <h5 class="custom-orange">既に登録済みの方</h5>
    <p><%= link_to "こちら", user_session_path, class: "group-link fw-bold" %>からログインしてください。</p>
  </div>
</div>
