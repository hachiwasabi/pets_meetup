<div class="container my-5">
  <h2 class="mb-4 text-center">プロフィール編集</h2>

  <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
    <div class="form-group mb-3">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :pet_type, "ペットの種類／好きな動物" %>
      <%= f.text_field :pet_type, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :pet_name, "ペットの名前" %>
      <%= f.text_field :pet_name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :bio, "自己紹介文" %>
      <%= f.text_area :bio, rows: 4, class: "form-control" %>
    </div>

    <div class="d-flex justify-content-between mt-4">
      <%= link_to "戻る", mypage_user_path(@user), class: "btn btn-secondary" %>
      <%= f.submit "更新する", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

