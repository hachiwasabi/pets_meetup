<div class="container my-5 px-sm-0">
  <h1 class="mb-4 custom-orange text-center">プロフィール編集</h1>

  <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
    <div class="form-group mb-3">
      <%= f.label :name, "名前", class:"form-label custom-orange fs-5 fw-bold" %>
      <%= f.text_field :name, class: "form-control comment-textarea" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :email, "メールアドレス", class:"form-label custom-orange fs-5 fw-bold" %>
      <%= f.email_field :email, class: "form-control comment-textarea" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :pet_type, "ペットの種類／好きな動物", class:"form-label custom-orange fs-5 fw-bold" %>
      <%= f.text_field :pet_type, class: "form-control comment-textarea" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :pet_name, "ペットの名前", class:"form-label custom-orange fs-5 fw-bold" %>
      <%= f.text_field :pet_name, class: "form-control comment-textarea" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :profile_image, "ペットの写真", class:"form-label custom-orange fs-5 fw-bold" %><br>
      <% if @user.profile_image.attached? %>
        <div class="mb-2">
          <%= image_tag @user.profile_image, size: "150x150", class: "img-fluid rounded" %><br>
          <small class="text-muted">※ 現在登録されている画像</small>
        </div>
      <% end %>
      <%= f.file_field :profile_image, class: "form-control comment-textarea" %>
    </div>


    <div class="form-group mb-3">
      <%= f.label :bio, "自己紹介文", class:"form-label custom-orange fs-5 fw-bold" %>
      <%= f.text_area :bio, rows: 4, class: "form-control comment-textarea" %>
    </div>

    <div class="d-flex justify-content-between mt-4">
      <%= link_to "戻る", mypage_user_path(@user), class: "btn btn-secondary" %>
      <%= f.submit "更新する", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

