<div class="container my-5 px-sm-0">
  <h1 class="mb-4 custom-orange text-center">マイページ</h1>

  <div class="card mb-5 custom-card shadow-sm">
    <div class="card-body">
      <h4 class="card-title mb-4">登録情報</h4>

      <div class="row align-items-center">
        <div class="col-md-2 text-center mb-3 mb-md-0">
          <% if @user.profile_image&.attached? %>
            <%= image_tag @user.profile_image, class: "img-fluid rounded profile-image shadow-sm", alt: "#{@user.name} のプロフィール画像" %>
          <% else %>
            <%= image_tag "placeholder-profile.png", class: "img-fluid rounded profile-image shadow-sm", alt: "プロフィール画像なし" %>
          <% end %>
        </div>

        <div class="col-md-8">
          <table class="table table-borderless mb-0 profile-table">
            <tbody>
              <tr>
                <th scope="row">名前</th>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <th scope="row">メールアドレス</th>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <th scope="row">ペットの種類／好きな動物</th>
                <td><%= @user.pet_type %></td>
              </tr>
              <tr>
                <th scope="row">ペットの名前</th>
                <td><%= @user.pet_name %></td>
              </tr>
              <tr>
                <th scope="row">自己紹介</th>
                <td><%= simple_format(@user.bio) %></td>
              </tr>
            </tbody>
          </table>

          <div class="d-flex justify-content-between mt-4">
            <%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn btn-primary" %>
            <%= button_to "退会する", withdraw_user_path(@user), method: :patch,
                data: { confirm: "本当に退会しますか？" },
                class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- あなたの投稿一覧（カード風） -->
  <div class="card mb-5 custom-card shadow-sm">
    <div class="card-body">
      <h4 class="card-title mb-3">あなたの投稿一覧</h4>

      <% if @posts.any? %>
        <div class="row">
          <% @posts.each do |post| %>
            <div class="col-md-6">
              <div class="card mb-3 post-card">
                <div class="card-body">
                  <h5 class="card-title mb-2">
                    <%= link_to post.title, post_path(post) %>
                  </h5>

                  <% if post.images.attached? %>
                    <div class="d-flex flex-wrap mb-2 post-images">
                      <% post.images.each do |image| %>
                        <%= link_to post_path(post), class: "me-2 mb-2" do %>
                          <%= image_tag image, class: "img-fluid rounded post-thumb", alt: post.title, size: "200x200" %>
                        <% end %>
                      <% end %>
                    </div>
                  <% end %>

                  <p class="card-text"><%= truncate(post.body, length: 100) %></p>

                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                      投稿者: <%= post.user.name %> | <%= l(post.created_at, format: :short) %>
                    </small>
                    <%= link_to "詳しく見る", post_path(post), class: "btn btn-sm btn-outline-primary" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p>まだ投稿はありません。</p>
      <% end %>
    </div>
  </div>

  <!-- 参加中のグループ -->
  <div class="card mb-5 custom-card shadow-sm">
    <div class="card-body">
      <h4 class="card-title mb-3">参加中のグループ</h4>

      <% approved_groups = @user.group_members.approved.map(&:group) rescue [] %>
      <% if approved_groups.any? %>
        <div class="row">
          <% approved_groups.each do |group| %>
            <div class="col-md-6">
              <div class="card mb-3 group-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                  <%= link_to group.name, group_path(group), class: "stretched-link fw-semibold" %>
                  <span class="badge bg-primary">参加中</span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">まだ参加中のグループはありません。</p>
      <% end %>
    </div>
  </div>
</div>
