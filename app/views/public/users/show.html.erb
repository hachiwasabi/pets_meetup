<div class="container my-5 px-sm-0">
  <h1 class="mb-4 custom-orange text-center"><%= "🕊 #{@user.name} さんのページ" %></h1>

  <!-- プロフィールカード -->
  <div class="card mb-5 custom-card shadow-sm">
    <div class="card-body">
      <h4 class="card-title custom-orange mb-2">登録情報</h4>
      <hr class="custom-hr">

      <div class="row align-items-center">
        <div class="col-md-2 text-center mb-3 mb-md-0">
        <%= image_tag @user.profile_image.variant(resize_to_limit: [120,120]).processed,
                      class: "img-fluid rounded profile-image shadow-sm",
                      alt: "#{@user.name} のプロフィール画像" %>
        </div>

        <div class="col-md-10">
          <table class="table table-borderless mb-0 profile-table">
            <tbody>
              <tr>
                <th scope="row">名前</th>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <th scope="row">ペットの種類／好きな動物</th>
                <td><%= @user.pet_type %></td>
              </tr>
              <tr>
                <th scope="row">ペットの名前</th>
                <td><%= @user.pet_name %></td>
              </tr>
              <tr>
                <th scope="row">自己紹介</th>
                <td><%= simple_format(@user.bio) %></td>
              </tr>
            </tbody>
          </table>

          <% if @user == current_user %>
            <div class="d-flex justify-content-between mt-4">
              <%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn btn-primary" %>
              <%= button_to "退会する", withdraw_user_path(@user), method: :patch,
                    data: { confirm: "本当に退会しますか？" },
                    class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- 投稿一覧カード -->
  <div class="card mb-5 custom-card shadow-sm">
    <div class="card-body">
      <h4 class="card-title custom-orange mb-2">投稿一覧</h4>
      <hr class="custom-hr">

      <% if @posts.any? %>
        <div class="row g-4">
          <% @posts.each do |post| %>
            <div class="col-md-6 col-lg-4">
              <div class="card post-card shadow-sm h-100">
                <% if post.images.attached? %>
                  <%= link_to post_path(post) do %>
                    <%= image_tag post.images.first.variant(resize_to_limit: [200,200]).processed,
                                  class: "card-img-top rounded-top", style: "object-fit: cover;" %>
                  <% end %>
                <% else %>
                  <div class="bg-soft-orange text-center py-5 rounded-top">No Image</div>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title mb-2">
                    <%= link_to post.title, post_path(post), class: "custom-orange text-decoration-none" %>
                  </h5>
                  <p class="card-text text-muted small mb-3"><%= truncate(post.body, length: 60) %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted"><%= l(post.created_at, format: :short) %></small>
                    <%= link_to "詳しく見る", post_path(post), class: "btn btn-sm btn-outline-primary" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-center text-muted">まだ投稿はありません。</p>
      <% end %>
    </div>
  </div>

  <!-- 参加中のグループカード -->
  <div class="card mb-5 custom-card shadow-sm">
    <div class="card-body">
      <h4 class="card-title custom-orange mb-2">所属グループ</h4>
      <hr class="custom-hr">

      <% approved_groups = @user.group_members.approved.map(&:group) rescue [] %>
      <% if approved_groups.any? %>
        <div class="row g-4">
          <% approved_groups.each do |group| %>
            <div class="col-md-6 col-lg-4">
              <div class="card group-card shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                  <%= link_to group.name, group_path(group), class: "stretched-link fw-semibold" %>
                  <% if @user == current_user %>
                    <span class="badge bg-primary">参加中</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-center text-muted">まだ参加中のグループはありません。</p>
      <% end %>
    </div>
  </div>
</div>
