<div class="p-3 bg-light rounded shadow-sm">

  <p class="custom-orange">フォロー数：<%= link_to @user.followers.count, follows_user_path(@user) %></p>

  <p class="custom-orange">フォロワー数：<%= link_to @user.followeds.count, followers_user_path(@user) %></p>

  <% if current_user.following?(@user) %>
    <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete, remote:true, data: {"turbolinks" => false}, class: "btn btn-soft-blue" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, remote:true, data:{"turbolinks" => false}, class: "btn bg-soft-orange" %>
  <% end %>

</div>