<div class="container my-5">
  <div class="text-center mb-4">
    <h1 class="fw-bold custom-orange">🐾 ログイン 🐾</h1>
    <h6 class="text-muted">ようこそ！ログインしてペット仲間とつながろう</h6>
  </div>

  <div class="card shadow-sm p-4 custom-card mx-auto" style="max-width: 600px;">
    <% flash.each do |type, message| %>
      <% next if message.blank? %>
      <div class="alert text-center <%= type == "alert" ? "alert-danger" : "alert-success" %>">
        <%= message %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label fw-bold custom-orange" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control comment-textarea", placeholder: "sample@example.com" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label fw-bold custom-orange" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control comment-textarea" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3 custom-checkbox">
          <%= f.check_box :remember_me, class: "form-check-input", id: "rememberCustom" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label fw-bold" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= f.submit "ログイン", class: "btn btn-lg bg-soft-orange fw-bold px-5" %>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <p>
      まだ登録していない方は
      <%= link_to "こちら", new_user_registration_path, class: "group-link fw-bold" %>
      から新規登録できます。
    </p>
    <p>
      <%= link_to "パスワードをお忘れですか？", new_user_password_path, class: "text-muted small" %>
    </p>
  </div>
</div>
