<div class="container my-5 px-sm-0">
  <h1 class="mb-4 custom-orange text-center">投稿を編集する</h1>

  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <h5>エラーがあります：</h5>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @post, local: true do |f| %>
    <div class="form-group mb-3">
      <%= f.label :title, "タイトル", class: "form-label custom-orange fs-5 fw-bold" %>
      <%= f.text_field :title, class: "form-control comment-textarea", placeholder: "例）うちのネコが新しいおもちゃを気に入った話" %>
    </div>

    <div class="form-group mb-4">
      <%= f.label :body, "本文", class: "form-label custom-orange fs-5 fw-bold" %>
      <%= f.text_area :body, rows: 8, class: "form-control comment-textarea", placeholder: "本文を入力してください..." %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :images, "投稿画像（1枚以上必須）", class:"form-label custom-orange fs-5 fw-bold" %><br>
      <% if @post.images.attached? %>
        <div class="mb-2">
          <% @post.images.each do |image| %>
            <%= image_tag image, size: "150x150", class: "img-fluid rounded me-2 mb-2" %>
          <% end %>
          <br>
          <small class="text-muted">※ 現在登録されている画像</small>
        </div>
      <% end %>
      <%= f.file_field :images, multiple: true, class: "form-control comment-textarea" %>
    </div>

    <div class="d-flex justify-content-between">
      <%= link_to "戻る", post_path(@post), class: "btn btn-soft-blue mb-3" %>
      <%= f.submit "更新する", class: "btn bg-soft-orange mb-3" %>
    </div>
  <% end %>
</div>

