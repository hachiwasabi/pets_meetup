<h1>投稿詳細</h1>

<div class="card mb-4 p-3">
  <h3><%= @post.title %></h3>
  <p><%= simple_format(h(@post.body)) %></p>

  <p class="text-muted">
    投稿者: <%= @post.user&.name || "ユーザー削除済み" %>（ID: <%= @post.user_id %>）<br>
    投稿日: <%= l(@post.created_at, format: :long) %>
  </p>

  <%= form_with url: admin_post_path(@post), method: :delete, local: true do |f| %>
    <%= f.submit "投稿を削除する", data: { confirm: "この投稿を完全に削除します。よろしいですか？" }, class: "btn btn-danger" %>
  <% end %>
</div>

<hr>

<h3>コメント一覧</h3>
<% if @comments.any? %>
  <% @comments.each do |comment| %>
    <div class="border p-2 mb-2">
      <strong><%= comment.user&.name || "ユーザー削除済み" %></strong>
      <span class="text-muted small">（<%= l(comment.created_at, format: :short) %>）</span>
      <br>
      <%= simple_format(h(comment.content)) %>

      <div class="mt-2">
        <%= form_with url: admin_comment_path(comment), method: :delete, local: true do |f| %>
          <%= f.submit "コメント削除", data: { confirm: "このコメントを削除します。よろしいですか？" }, class: "btn btn-sm btn-outline-danger" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>コメントはありません。</p>
<% end %>

<%= link_to "投稿一覧へ戻る", admin_posts_path, class: "btn btn-secondary mt-4" %>
