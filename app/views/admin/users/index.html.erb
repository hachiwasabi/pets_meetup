<div class="container my-4">
  <h1 class="mb-3">ユーザー一覧</h1>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>名前</th>
        <th>メール</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%=link_to user.name, admin_user_path(user) %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_active %>
              <span class="text-success">会員</span>
            <% else %>
              <span class="text-muted">退会済み</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-3">
  <%= paginate @users %>
</div>